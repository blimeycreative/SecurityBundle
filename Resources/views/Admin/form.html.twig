<form action="{{ form_route }}" method="post" {{ form_enctype(form) }}>
    <div id="user-form">
      {{ form_row(form.username) }}    
      {% if new_user is defined %}
        {{ form_row(form.password) }}
      {% endif %}
      {{ form_row(form.email) }}     
      {{ form_row(form.active) }}     
      {{ form_row(form.role_objects) }}     

      {{ form_rest(form) }}
      <input type="submit" value="Save user" class="submit" />
    </div>
  </form>
